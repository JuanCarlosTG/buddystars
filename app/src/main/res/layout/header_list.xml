<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/rl_header_list">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_toggle"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="12sp"
            android:id="@+id/ib_header_list"
            android:onClick="closeDrawer"
            android:visibility="invisible"
            android:layout_marginRight="12sp"/>

    </RelativeLayout>


    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="10sp"
        android:background="@drawable/mask_avatar"
        android:id="@+id/image_header_profile"
        android:layout_below="@+id/rl_header_list"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="10sp"
        android:background="@drawable/mask_avatar"
        android:layout_below="@+id/rl_header_list"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:gravity="center"
        android:id="@+id/txt_username"
        android:layout_below="@+id/image_header_profile"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>